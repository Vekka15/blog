<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h3 id="naglowek">BLOGisLOVE BLOGisLIFE</h3>

  <div class="user_head">
    <% if current_user!=nil %>
    Witaj, <%=link_to(current_user.username,user_path(current_user), class: "head_button")%>
    <%= link_to("Sign out", destroy_user_session_path,method: :delete, class: "head_button") %>
    <%end%>
  </div>

  <div>
    <%= form_tag('/articles/search', method: :get) do%>
    <div class="search_text_field_tag"> <%= text_field_tag :name %></div>
    <div class="search_button"> <%= submit_tag "Search"%></div>
  <%end%>
  </div>
<%= yield %>

</body>
</html>
